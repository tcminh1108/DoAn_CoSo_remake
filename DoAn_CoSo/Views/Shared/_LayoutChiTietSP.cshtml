<!DOCTYPE html>
<html lang="en">
<head>
    <title>VegefShop - Hàng Việt Nam chất lượng cao</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Font_End/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Font_End/css/animate.css">

    <link rel="stylesheet" href="~/Font_End/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Font_End/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Font_End/css/magnific-popup.css">

    <link rel="stylesheet" href="~/Font_End/css/aos.css">

    <link rel="stylesheet" href="~/Font_End/css/ionicons.min.css">

    <link rel="stylesheet" href="~/Font_End/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Font_End/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/Font_End/css/flaticon.css">
    <link rel="stylesheet" href="~/Font_End/css/icomoon.css">
    <link rel="stylesheet" href="~/Font_End/css/style.css">
</head>
<body class="goto-here">

    <!--Header-->
    @Html.Action("Header", "BoCuc")

    <!--Banner-->
    <div class="hero-wrap hero-bread" style="background-image: url('../Font_End/images/bg_1.jpg');">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-0 bread">Chi Tiết Sản Phẩm</h1>
                </div>
            </div>
        </div>
    </div>

    <!--Chi tiết sản phẩm-->
    <section class="ftco-section">
        <div>
            @RenderBody()
        </div>
    </section>

    <!--Sản phẩm liên quan-->
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <span class="subheading">Vegef Shop</span>
                    <h2 class="mb-4">Sản Phẩm Liên Quan</h2>
                    <p>Chúng tôi luôn mang đến những điều tốt nhất cho sức khỏe của bạn và gia đình</p>
                </div>
            </div>
        </div>
        @Html.Action("SPLienQuan","SanPham")
    </section>

    <!--Footer-->
    @Html.Action("Footer", "BoCuc")



    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="~/Font_End/js/jquery.min.js"></script>
    <script src="~/Font_End/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Font_End/js/popper.min.js"></script>
    <script src="~/Font_End/js/bootstrap.min.js"></script>
    <script src="~/Font_End/js/jquery.easing.1.3.js"></script>
    <script src="~/Font_End/js/jquery.waypoints.min.js"></script>
    <script src="~/Font_End/js/jquery.stellar.min.js"></script>
    <script src="~/Font_End/js/owl.carousel.min.js"></script>
    <script src="~/Font_End/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Font_End/js/aos.js"></script>
    <script src="~/Font_End/js/jquery.animateNumber.min.js"></script>
    <script src="~/Font_End/js/bootstrap-datepicker.js"></script>
    <script src="~/Font_End/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/Font_End/js/google-map.js"></script>
    <script src="~/Font_End/js/main.js"></script>

    

</body>
</html>