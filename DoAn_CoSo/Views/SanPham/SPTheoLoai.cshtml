@model IEnumerable<DoAn_CoSo.Models.SanPham>
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/_LayoutSanPham.cshtml";
}

<div class="container">
    <!--Danh sách loại sản phẩm-->
    @Html.Action("LoaiSP", "SanPham")
    <!--Sản phẩm theo loại-->
    <div class="row">
        @foreach (var SPTheoLoai in Model)
        {
            <div class="col-md-6 col-lg-3 ftco-animate" style="width: 200px">
                <div class="product">
                    <a href="#" class="img-prod">
                        <img class="img-fluid" src="~/All_Images/SanPham/@SPTheoLoai.Hinhanh" alt="@SPTheoLoai.Ten_SP">
                        @if (@SPTheoLoai.Khuyenmai != 0)
                        {
                            <span class="status">@SPTheoLoai.Khuyenmai%</span>
                        }
                        <div class="overlay"></div>
                    </a>
                    <div class="text py-3 pb-4 px-3 text-center">
                        <h3><a href="#">@SPTheoLoai.Ten_SP</a></h3>
                        <div class="d-flex">
                            <div class="pricing">
                                @if (@SPTheoLoai.Khuyenmai != 0)
                                {
                                    <p class="price"><span class="mr-2 price-dc">@SPTheoLoai.Giaban VND</span><span class="price-sale">@SPTheoLoai.Giakhuyenmai VND</span></p>
                                }
                                else
                                {
                                    <p class="price"><span>@SPTheoLoai.Giaban VND</span></p>
                                }

                            </div>
                        </div>
                        <div class="bottom-area d-flex px-3">
                            <div class="m-auto d-flex">
                                <a href="@Url.Action("ChiTietSP","SanPham", new {Ma_SP = SPTheoLoai.Ma_SP})" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                    <span><i class="ion-ios-menu"></i></span>
                                </a>
                                <a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                    <span><i class="ion-ios-cart"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row mt-5">
        <div class="col text-center">
            <div class="block-27">
                <ul>
                    <li><a href="#">&lt;</a></li>
                    <li class="active"><span>1</span></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&gt;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

